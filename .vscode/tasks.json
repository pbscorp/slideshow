{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run PHP Server",
      "type": "shell",
      "command": "php -S localhost:8000",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Open Current File in Browser",
      "type": "shell",
      "command": "open http://localhost:8000/${fileBasename}",
      "problemMatcher": []
    }
  ]
}
